{
  "compileOnSave": true,
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/test/**/*.ts",
    "dist"
  ]
}
